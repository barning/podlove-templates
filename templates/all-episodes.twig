{# @core/shortcode/all-episodes.twig #}
<div class="podcast-archive">
    <div class="podcast-archive__body">
        {% for episode in podcast.episodes %}
            <div class="podcast_archive__element">
                <a href="{{ episode.url }}">
                    <div class="thumbnail">
                        {{ episode.image({fallback: true}).html({width: 100, height: 100}) }}
                    </div>
                    <div class="metadata">
                        <div class="title">
                            <strong>UP#{{ episode.number }} - {{ episode.title }}</strong> vom {{ episode.publicationDate.format('d.m.Y') }}
                        </div>
                        <div class="contributors">
                            mit 
                            {% for contributor in episode.contributors({group: group, role: role}) %}
                                {% if contributor.visible %}
                                    <span class="name">{{ contributor.name }}{% if not loop.last %}, {% endif %}</span>
                                {% endif %}
                            {% endfor %}
                        </div>                        
                    </div>
                </a>
             </div>
        {% endfor %}
    </div>
</div>

<style type="text/css">
.podcast_archive__element a {
    display: flex;
    align-items: center;
    padding: 1rem;
    text-decoration: none;
    transition: background-color .2s ease-in-out;
    color: black;
}

.podcast_archive__element a:hover {
    background-color: #D8D8D8;
}

.podcast_archive__element .metadata {
    width: 100%;
    margin-left: 1rem;
}

.podcast_archive__element {
    margin-bottom: 5%;
}
</style>
